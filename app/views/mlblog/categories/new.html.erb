
<h1 class="ui header"><div class="content">カテゴリ 新規作成</div></h1>

<div class="ui breadcrumb"><%= link_to "カテゴリ一覧", categories_path() %></div>
  <i class="right chevron icon divider"></i>
  <div class="section active">カテゴリ 新規作成</div>
</div>

<%= simple_form_for @category, url: categories_path() do |f| %>

  <div class="ui blue segment">
    <%= render partial: "form", locals: { f: f } %>
  </div>

  <%= link_to raw("<i class='ui arrow left icon'></i> 戻る"),  categories_path(), class: 'ui yellow button' %>
  <%= f.submit "登録する" %>

<% end %>